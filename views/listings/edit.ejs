<% layout('layouts/boilerplate') -%>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <br>
                <h3>Edit Your Listing</h3>
                <br>
                <form action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data" method="post"
                    class="needs-validation" novalidate>

                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input required type="text" name="listing[title]" placeholder="Enter title" class="form-control"
                            value="<%= listing.title %>">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea required name="listing[description]" placeholder="Add catchy description" cols="35"
                            rows="6" class="form-control"><%= listing.description %></textarea>
                        <div class="invalid-feedback">
                            You must write description.
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <h6>Original Image Listing</h6>
                        <img src="<%= originalImageUrl %>" alt="">
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload New Image</label>
                        <input  type="file" name="listing[image]" placeholder="Enter image"
                            class="form-control">
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input required type="text" name="listing[price]" placeholder="Enter price"
                                class="form-control" value="<%= listing.price %>">
                            <div class="invalid-feedback">
                                You must write price.
                            </div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="location" class="form-label">Location</label>
                            <input required type="text" name="listing[location]" placeholder="Enter location"
                                class="form-control" value="<%= listing.location %>">
                            <div class="invalid-feedback">
                                You must write location.
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input required type="text" name="listing[country]" placeholder="Enter country"
                            class="form-control" value="<%= listing.country %>">
                        <div class="invalid-feedback">
                            You must write country.
                        </div>
                    </div>


                    <br>
                    <button class="edit-btn">Update Listing</button>
                </form>
                <br><br>
            </div>
        </div>








        </div>
    </body>