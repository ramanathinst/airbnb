<% layout('layouts/boilerplate') -%>

    <script>
        const mapToken = "<%= process.env.MAP_TOKEN %>";
        const listing = <%- JSON.stringify(listing) %>;
    </script>
    <body>
        
        <div class="row mt-4">
            <div class="col-8 offset-2">
                <h3> <b>
                        <%= listing.title %>
                    </b> <br></h3>
                <div class="card listing-card col-6">
                    <img src="<%= listing.image.url %>" style="width: 80vh;" class="card-img-top show-img"
                        alt="listing image">
                    <div class="card-body">
                        <p class="card-text">
                        <p>Owner by : <i>
                                <%= listing.owner.username %>
                            </i>
                        </p>
                        <%= listing.description %> <br>
                            &#8377;<%= listing.price.toLocaleString("en-in")%> / Night <br>
                                <%= listing.location %> <br>
                                    <%= listing.country %> <br>
                                        </p>
                    </div>
                </div>
                <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
                    <div class="show-btn">
                        <a class="edit-btn" href="/listings/<%= listing.id %>/edit">Edit</a>

                        <div>
                            <form action="/listings/<%= listing._id %>?_method=delete" method="post">
                                <button class="edit-btn">Delete</button>
                            </form>
                        </div>
                    </div>
                    <hr>
                    <% } %>




                        <div class="col-10">
                            <% if(currUser) { %>
                                <br>
                                <h3>Leave Reviews</h3>
                                <br>
                                <form action="/listings/<%= listing._id %>/reviews" method="post"
                                    class="needs-validation mb-5" novalidate>
                                    <div class="mb-3">
                                        <label for="rating" class="form-label">Rating</label>
                                        <fieldset class="starability-slot">
                                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                                value="1" checked aria-label="No rating." />
                                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                            <label for="first-rate1" title="Terrible">1 star</label>
                                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                            <label for="first-rate2" title="Not good">2 stars</label>
                                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                            <label for="first-rate3" title="Average">3 stars</label>
                                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                            <label for="first-rate4" title="Very good">4 stars</label>
                                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                            <label for="first-rate5" title="Amazing">5 stars</label>
                                        </fieldset>

                                    </div>

                                    <div class="mb-3">
                                        <label for="comment" class="form-label">Comments</label>
                                        <textarea name="review[comment]" placeholder="Add catchy comments" cols="35"
                                            rows="6" class="form-control" required></textarea>
                                        <div class="invalid-feedback">
                                            You must write Comments!
                                        </div>
                                    </div>
                                    <button class="btn btn-outline-dark">Submit</button>
                                </form>

                                <% } %>


                                    <% if(listing.reviews.length> 0) { %>
                                        <hr>
                                        <h3>All Reviews</h3>
                                        <div class="row">
                                            <% for(let review of listing.reviews) { %>

                                                <div class="card col-5 mb-3 ms-3">
                                                    <div class="card-body">
                                                        <p><b>@<%= review.author.username %></b></p>
                                                        <p class="card-text">
                                                        <p class="starability-result"
                                                            data-rating="<%= review.rating %>">
                                                        </p>
                                                        </p>
                                                        <h5 class="card-title">
                                                            <%= review.comment %>
                                                        </h5>

                                                    </div>
                                                    <form class="mt-2 mb-2"
                                                        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                        method="post">
                                                        <button class="btn btn-sm btn-dark">Delete</button>
                                                    </form>
                                                </div>
                                                <% } %>
                                        </div>
                                        <% } %>
                        </div>

                        <hr>
                        <h3>where you'll be </h3>

                        <div id="map"></div>

            </div>
        </div>
        </div>

        <script src="/js/map.js"></script>
    </body>